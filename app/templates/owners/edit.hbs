<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Nombre</label>
    <div class="col-sm-10">
    {{input type="text" value=model.name class="form-control" placeholder="el propietario"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Dirección</label>
    <div class="col-sm-10">
      {{input type="text" value=model.address class="form-control" placeholder="La dirección de la casa"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Teléfono</label>
    <div class="col-sm-10">
      {{input type="text" value=model.phone class="form-control" placeholder="Teléfono móvil"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveOwner' model}}><span class="glyphicon glyphicon-check" aria-hidden="true"></span><span class="glyphicon glyphicon-user" aria-hidden="true"></span></button>
    </div>
  </div>
</div>