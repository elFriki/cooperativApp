<div class="jumbotron text-center">

  <div class="form-horizontal form-group form-group-lg has-feedback row">

  {{textarea class="form-control" placeholder="Tu mensaje de al menos 5 caracteres" rows="7" value=message  autofocus="autofocus"}}

  <br/>

    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
      <div class="input-group">
        <span class="input-group-addon">@</span>
        {{input type="email" value=emailToAddress class="form-control" placeholder="e-mail"}}
{{#if isValid}}
<span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
{{else}}
<span class="glyphicon glyphicon-remove form-control-feedback" aria-hidden="true"></span>
{{/if}}

        <span id="inputGroupSuccess1Status" class="sr-only">(success)</span>
    </div>
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
        <button disabled={{isDisabled}} {{action 'sendMessage'}} class="btn btn-primary btn-lg btn-block "><span class="glyphicon glyphicon-send" aria-hidden="true"></span></button>
    </div>
  </div>

{{#if responseMessage}}
  <div class="alert alert-success">{{responseMessage}}</div>
{{/if}}

</div>